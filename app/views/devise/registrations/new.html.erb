<div class="sign-up">
    <h2 class="sign-up-title">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

     <%= f.label :email %>
     <%= f.email_field :email, autofocus: true, class: "sign-up-input" %>
     <%= f.label :password %>
     <%= f.password_field :password, autocomplete: "off", class: "sign-up-input" %>
     <%= f.label :password_confirmation %>
     <%= f.password_field :password_confirmation, autocomplete: "off", class: "sign-up-input" %>
     <%= f.submit "Sign up", class: "sign-up-button" %>
    <% end %>
    <%= render "devise/shared/links" %>
</div>
